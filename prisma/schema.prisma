// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int        @id @default(autoincrement())
  email     String     @unique
  username  String     @unique
  password  String
  createdAt DateTime   @default(now())
  questions Question[]

  @@map("users")
}

model Question {
  id          Int      @id @default(autoincrement())
  description String
  views       Int
  userId      Int
  createdAt   DateTime @default(now())

  user    User     @relation(fields: [userId], references: [id])
  answers Answer[]
  votes   Vote[]

  @@map("questions")
}

model Answer {
  id          Int      @id @default(autoincrement())
  description String
  username    String
  questionId  Int
  createdAt   DateTime @default(now())

  question Question @relation(fields: [questionId], references: [id])

  @@map("answers")
}

model Vote {
  id         Int      @id @default(autoincrement())
  username   String
  questionId Int
  createdAt  DateTime @default(now())

  question Question @relation(fields: [questionId], references: [id])

  @@map("votes")
}
